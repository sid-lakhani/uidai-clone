---
import BaseLayout from "../layouts/Layout.astro";
---

<BaseLayout title="Logged In">
  <div class="flex flex-col min-h-screen justify-center items-center h-screen">
    <h1 class="text-4xl font-bold">Logged In!</h1>
    <h1 class="text-4xl font-bold">
      Aadhaar Number: <span id="aadhaarNumber">invalid</span>
    </h1>
  </div>
</BaseLayout>

<script>
  const urlParams = new URLSearchParams(window.location.search);
  const aadhaarNumber = urlParams.get("aadhaarNumber");

  console.log(aadhaarNumber);

  const aadharNoSpan = document.getElementById("aadhaarNumber");

  if (aadhaarNumber) {
    aadharNoSpan.innerHTML = aadhaarNumber;
  }
</script>
