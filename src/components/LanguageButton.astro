---
const { language, label, path } = Astro.props;
---

<a href={path} class="relative inline-block p-3 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 transition duration-300 group">
  <span class="transition-opacity duration-300 ease-in-out group-hover:opacity-0">{label}</span>
  <span class="absolute inset-0 flex items-center justify-center text-sm text-gray-200 opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out">
    {language === 'en' && 'Welcome'}
    {language === 'hi' && 'स्वागत है'}
    {language === 'mr' && 'स्वागत आहे'}
    {language === 'gu' && 'સ્વાગત છે'}
  </span>
</a>
